<?xml version="1.0" encoding="UTF-8"?>
<project name="orangeleap" basedir=".." default="usage">

	<property file="${basedir}/build/build.properties" />
	<property file="${commonBuild.dir}/commonBuild.properties"/>
	<tstamp prefix="build" />


	<import file="${commonBuild.dir}/ivyBuild.xml"/>

	<taskdef resource="net/sf/antcontrib/antcontrib.properties">
		<classpath>
			<pathelement location="${antcontrib.jar}" />
		</classpath>
	</taskdef>

	<target name="build">
		<antcall target="build-integrated-war" />
	</target>

	<target name="setup" depends="clean-build, resolve">
		<echo>Setting up for environment = ${build.env}</echo>
		<mkdir dir="${stage.dir}" />
		<if>
			<equals arg1="${build.env}" arg2="dev" />
			<then>
				<property name="debug.compile" value="true" />
			</then>
			<elseif>
				<equals arg1="${build.env}" arg2="unit-test" />
				<then>
					<property name="debug.compile" value="true" />
				</then>
			</elseif>
			<else>
				<property name="debug.compile" value="false" />
			</else>
		</if>
	</target>
	
	<target name="compile" depends="setup">
		<mkdir dir="${classes.dir}" />
		
		<echo>Compiling with debug=${debug.compile}</echo>
		<javac destdir="${classes.dir}" srcdir="${src.dir}" memoryInitialSize="128m" memoryMaximumSize="1024m" fork="true"
			debug="${debug.compile}" classpathref="compile.path"/> <!-- compile.path is set in ivyBuild.xml -->
	</target>
	
	<target name="jspc" depends="compile"> 
		<taskdef resource="org/apache/catalina/ant/catalina.tasks">
			<classpath>
				<pathelement path="${compile.lib}"/>
				<pathelement path="${war.lib}"/>
				<pathelement path="${classes.dir}"/>
			</classpath>
		</taskdef>

	    <jasper validateXml="false" uriroot="${war.dir}" webXmlFragment="${war.dir}/WEB-INF/generated_web.xml" 
	    	addWebXmlMappings="true" outputDir="${war.dir}/WEB-INF/src" /> 

		<javac destdir="${classes.dir}" optimize="on" debug="off" memoryInitialSize="128m" memoryMaximumSize="2048m" fork="true"
	    	failonerror="false" srcdir="${war.dir}/WEB-INF/src" classpathref="compile.path"/>

	</target> 

	<target name="jar" depends="compile">
		<copy todir="${classes.dir}">
			<fileset dir="${src.dir}">
				<include name="**/*.*" />
				<exclude name="**/*.java" />
			</fileset>
			<fileset dir="${config.dir}">
				<include name="**/*.properties" />
				<include name="**/*.xml" />
				<include name="**/*.drl" />
				<include name="**/*.dslr" />
				<include name="**/*.dsl" />
                <include name="**/jaxb.index"/>
			</fileset>
		</copy>

		<jar jarfile="${stage.dir}/${app.name}.jar" basedir="${classes.dir}">
			<include name="**/*.class" />
			<include name="**/*.properties" />
			<include name="**/*.xml" />
			<include name="**/*.drl" />
			<include name="**/*.dslr" />
			<include name="**/*.dsl" />
            <include name="**/jaxb.index"/>
			<include name="META-INF/**" />
			<exclude name="**/test/**/*.class" />
		</jar>
		<!--<delete dir="${classes.dir}" />-->
	</target>

	<target name="setup-war" depends="jar">
		<mkdir dir="${stage.dir}/war" />
		<mkdir dir="${stage.dir}/war/META-INF" />
		<mkdir dir="${stage.dir}/war/WEB-INF" />
		<mkdir dir="${stage.dir}/war/WEB-INF/lib" />
		<mkdir dir="${stage.dir}/war/WEB-INF/classes" />

		<copy todir="${stage.dir}/war" includeemptydirs="true">
			<fileset dir="${war.dir}">
				<include name="**/*.*" />
			</fileset>
		</copy>

		<copy todir="${stage.dir}/war/WEB-INF/lib">
			<fileset dir="${stage.dir}">
				<include name="${app.name}.jar" />
			</fileset>
		</copy>

		<copy todir="${stage.dir}/war/WEB-INF/lib" flatten="true">
		    <path>
				<pathelement path="${war.lib}"/> <!-- war.lib from ivyBuild.xml -->
		    </path>
		</copy>

		<replace file="${stage.dir}/war/login.jsp" token="$${build.version}" value="${build.TODAY}"/>
		<replace file="${stage.dir}/war/login.jsp" token="$${build.time}" value="${build.DSTAMP} ${build.TSTAMP}"/>

	</target>

	<target name="build-integrated-war" depends="setup-war">
		<war destfile="${stage.dir}/${war.name}.war" basedir="${stage.dir}/war">
			<include name="**/*.*" />
		</war>
		<delete dir="${stage.dir}/war" />
	</target>

	<target name="build-exploded-war" depends="setup-war">
		<mkdir dir="${stage.dir}/${war.name}.war" />
		<copy todir="${stage.dir}/${war.name}.war">
			<fileset dir="${stage.dir}/war">
				<include name="**/*.*" />
			</fileset>
		</copy>
		<delete dir="${stage.dir}/war" />
	</target>

	<target name="copy-tangerine.properties">
		<!-- Only copy if tangerine.properties does not already exist.  This is necessary to preserve the different values in the different deployment instances -->
		<property name="deploy.lib.dir" location="${deploy.path}/../lib" />
		<copy todir="${deploy.lib.dir}" file="${basedir}/tangerine.properties" />
		<echo message="Copied tangerine.properties to ${deploy.lib.dir}"/>
		<!--
		<available file="${deploy.lib.dir}/tangerine.properties" property="tangerine.properties.present"/>
		<if>
			<equals arg1="${tangerine.properties.present}" arg2="true" />
			<else>
				<copy todir="${deploy.lib.dir}" file="${basedir}/tangerine.properties" />
				<echo message="Copied tangerine.properties to ${deploy.lib.dir}"/>
			</else>
		</if>
		-->
	</target>
	
	<target name="deploy-integrated-war" depends="build-integrated-war, copy-tangerine.properties">
		<copy todir="${deploy.path}" file="${stage.dir}/${war.name}.war" />
	</target>

	<target name="deploy-exploded-war" depends="build-exploded-war, copy-tangerine.properties">
		<copy todir="${deploy.path}/${war.name}">
			<fileset dir="${stage.dir}/${war.name}.war" />
		</copy>
		<delete dir="${stage.dir}/${war.name}.war" quiet="true" />
	</target>

	<target name="undeploy-war">
		<delete dir="${deploy.path}/${war.name}.war" />
		<delete dir="${deploy.path}/${war.name}" />
		<delete dir="${deploy.path}/../work" quiet="true" />
		<delete dir="${deploy.path}/../temp" quiet="true" />
		<delete>
			<fileset dir="${deploy.path}" includes="${war.name}.war" />
			<fileset dir="${deploy.path}" includes="${war.name}" />
		</delete>
	</target>

	<target name="generate-javadocs">
		<mkdir dir="${stage.dir}/javadocs" />

		<path id="compile-lib">
			<fileset refid="compile.path" /> <!-- compile.path from ivyBuild.xml -->
			<fileset refid="war.path" /> <!-- war.path from ivyBuild.xml -->
		</path>

		<javadoc packagenames="com.orangeleap.*" destdir="${stage.dir}/javadocs" classpathref="compile-lib" useexternalfile="true">
			<fileset dir="${src.dir}">
				<include name="**/*.java" />
			</fileset>
		</javadoc>
	</target>

	<target name="app.synch">
		<echo>Synchronizing App</echo>
		<sync todir="${deploy.path}/${war.name}/css">
			<fileset dir="${war.dir}/css">
				<include name="**/*.*"/>
			</fileset>
		</sync>
		<sync todir="${deploy.path}/${war.name}/js">
			<fileset dir="${war.dir}/js">
				<include name="**/*.*"/>
			</fileset>
		</sync>
		<sync todir="${deploy.path}/${war.name}/images">
			<fileset dir="${war.dir}/images">
				<include name="**/*.*"/>
			</fileset>
		</sync>
		<sync todir="${deploy.path}/${war.name}/WEB-INF/jsp">
			<fileset dir="${war.dir}/WEB-INF/jsp">
				<include name="**/*.*"/>
			</fileset>
		</sync>
		<copy todir="${deploy.path}/${war.name}">
			<fileset dir="${war.dir}">
				<include name="*.jsp"/>
			</fileset>
		</copy>
	</target>
	
	<target name="optimization" depends="resolve">
		<taskdef classname="com.rockstarapps.jslex.ant.CSSOptimization" name="css-optimization">
			<classpath path="${compile.lib}"/>
		</taskdef>
		
		<css-optimization
			minify="true" 
			gZip="true" 
			destFile="${war.dir}/css/tangerine.css" 
			optimizationLibraryPath="${lib.dir}/jslex-optimization-1.2b.jar"
			verbose="true">
	
			<!--	
				Defines the set of files that will be concatenated and
				then optimized. All the files need to be css files or 
				errors will occur.
			-->
            <fileset dir="${war.dir}/css" includes="tablesorter.css" />
            <fileset dir="${war.dir}/css" includes="jquery.tooltip.css" />
            <fileset dir="${war.dir}/css" includes="datePicker.css" />
            <fileset dir="${war.dir}/css" includes="jqModal.css" />
            <fileset dir="${war.dir}/css" includes="jquery.autocomplete.css" />
            <fileset dir="${war.dir}/css" includes="jquery.cluetip.css" />
            <fileset dir="${war.dir}/css" includes="master.css" />
            <fileset dir="${war.dir}/css" includes="navigation.css" />
            <fileset dir="${war.dir}/css" includes="forms.css" />
            <fileset dir="${war.dir}/css" includes="pages.css" />
            <fileset dir="${war.dir}/js/extjs/resources/css" includes="ext-all.css" />
            <fileset dir="${war.dir}/js/extjs/resources/css" includes="xtheme-gray.css" />
            <fileset dir="${war.dir}/css" includes="orange-theme.css" />
            <fileset dir="${war.dir}/css" includes="ext-styles.css" />
		</css-optimization>

		<taskdef classname="com.rockstarapps.jslex.ant.JavaScriptOptimization" name="javascript-optimization">
			<classpath path="${compile.lib}"/>
		</taskdef>

		<javascript-optimization
			minify="true" 
			yCompressor="true" 
			gZip="false" 
			destFile="${war.dir}/js/tangerine.js" 
			optimizationLibraryPath="${lib.dir}/jslex-optimization-1.2b.jar"
			verbose="true">

			<!--	
				Defines the set of files that will be concatenated and
				then optimized. All the files need to be JavaScript files
				or errors will occur.
			-->
            <fileset dir="${war.dir}/js" includes="jquery/jquery-1.3.2.min.js" />
            <fileset dir="${war.dir}/js" includes="extjs/ext-jquery-adapter.js" />
            <fileset dir="${war.dir}/js" includes="extjs/ext-all.js" />
            <fileset dir="${war.dir}/js" includes="extjs/ext-ajax-queue.js" />
            <fileset dir="${war.dir}/js" includes="jquery.bgiframe.js" />
            <fileset dir="${war.dir}/js" includes="jquery/plugins/jquery.hoverIntent.js" />
	        <fileset dir="${war.dir}/js" includes="jquery.cluetip.js" />
	        <fileset dir="${war.dir}/js" includes="jquery.selectboxes.js" />
	        <fileset dir="${war.dir}/js" includes="jqModal.js" />
	        <fileset dir="${war.dir}/js" includes="jqDnR.js" />
	        <fileset dir="${war.dir}/js" includes="jquery/plugins/jquery.numeric.pack.js" />
	        <fileset dir="${war.dir}/js" includes="jquery/plugins/jquery.fade.js" />
	        <fileset dir="${war.dir}/js" includes="jquery/plugins/jquery.ajaxQueue.js" />
	        <fileset dir="${war.dir}/js" includes="jquery/plugins/jquery.autocomplete.js" />
	        <fileset dir="${war.dir}/js" includes="date.js" />
		</javascript-optimization>

	</target>
	
	
	<target name="usage">
		<echo>This is the internal build file for Tangerine.</echo>
		<echo>Please use build.xml</echo>
	</target>

</project>
