<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="POST_BATCH_SEGMENTATION">

    <resultMap id="POST_BATCH_SEGMENTATION_RESULT" class="com.orangeleap.tangerine.domain.PostBatchSegmentation">
        <result property="id" column="POST_BATCH_SEGMENTATION_POST_BATCH_SEGMENTATION_ID" />
        <result property="postBatchId" column="POST_BATCH_SEGMENTATION_POST_BATCH_ID" />
        <result property="segmentationId" column="POST_BATCH_SEGMENTATION_ID" />
        <result property="createDate" column="POST_BATCH_SEGMENTATION_CREATE_DATE" />
        <result property="updateDate" column="POST_BATCH_SEGMENTATION_UPDATE_DATE" />
    </resultMap>

    <sql id="POST_BATCH_SEGMENTATION_COLS_FRAGMENT">
        pbs.POST_BATCH_SEGMENTATION_ID as POST_BATCH_SEGMENTATION_POST_BATCH_SEGMENTATION_ID,
        pbs.POST_BATCH_ID as POST_BATCH_SEGMENTATION_POST_BATCH_ID,
        pbs.SEGMENTATION_ID as POST_BATCH_SEGMENTATION_ID,
        pbs.CREATE_DATE as POST_BATCH_SEGMENTATION_CREATE_DATE,
        pbs.UPDATE_DATE as POST_BATCH_SEGMENTATION_UPDATE_DATE
    </sql>

    <sql id="SELECT_POST_BATCH_SEGMENTATION_FRAGMENT">
        select
        <include refid="POST_BATCH_SEGMENTATION_COLS_FRAGMENT"/>
        from POST_BATCH_SEGMENTATION pbs
    </sql>

    <select id="SELECT_POST_BATCH_SEGMENTATIONS" resultMap="POST_BATCH_SEGMENTATION_RESULT" parameterClass="map">
        <include refid="SELECT_POST_BATCH_SEGMENTATION_FRAGMENT"/>
        where pbs.POST_BATCH_ID = #postBatchId#
    </select>

    <select id="SELECT_POST_BATCH_REVIEW_SET_SIZE" resultClass="java.lang.Long" parameterClass="map">
        select count(*) CNT
        from POST_BATCH_SEGMENTATION pbs
        where pbs.POST_BATCH_ID = #postBatchId#
    </select>
 
    <delete id="DELETE_POST_BATCH_SEGMENTATIONS_BY_POST_BATCH_ID" parameterClass="long">
        delete from POST_BATCH_SEGMENTATION
        where POST_BATCH_ID = #postBatchId#
    </delete>

    <insert id="INSERT_POST_BATCH_SEGMENTATION" parameterClass="com.orangeleap.tangerine.domain.PostBatchSegmentation">
        insert into POST_BATCH_SEGMENTATION (POST_BATCH_ID,
        	SEGMENTATION_ID,
        	CREATE_DATE,
        	UPDATE_DATE)
        values (#postBatchId#,
        	#segmentationId#,
        	now(),
        	now())
        <selectKey keyProperty="id" resultClass="long">
            SELECT LAST_INSERT_ID() AS value
        </selectKey>
    </insert>

    <update id="UPDATE_POST_BATCH_SEGMENTATION" parameterClass="com.orangeleap.tangerine.domain.PostBatchSegmentation">
        update POST_BATCH_SEGMENTATION
        SET POST_BATCH_ID = #postBatchId# ,
        	SEGMENTATION_ID = #segmentationId#,
        	UPDATE_DATE = now()
        where POST_BATCH_SEGMENTATION_ID = #id#
    </update>

</sqlMap>

