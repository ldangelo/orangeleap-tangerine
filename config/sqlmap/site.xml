<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="SITE">

	<!-- ResultMaps -->
	<resultMap id="SITE_RESULT" class="com.mpower.domain.model.Site">
		<result property="name" column="SITE_NAME" jdbcType="VARCHAR" />
		<result property="createDate" column="CREATE_DATE" jdbcType="TIMESTAMP" />
		<result property="merchantNumber" column="MERCHANT_NUMBER" jdbcType="VARCHAR" />
		<result property="updateDate" column="UPDATE_DATE" jdbcType="TIMESTAMP" />
		<result property="parentSite" resultMap="SITE.PARENT_SITE_RESULT" />
	</resultMap>

	<resultMap id="PARENT_SITE_RESULT" class="com.mpower.domain.model.Site">
		<result property="name" column="PARENT_SITE_NAME" jdbcType="VARCHAR" />
	</resultMap>

	<!-- Selects -->
	<sql id="SELECT_SITE_FRAGMENT">
		FROM SITE
		WHERE SITE_NAME = #siteName#
	</sql>
			
	<select id="SELECT_BY_SITE_NAME" resultMap="SITE_RESULT" parameterClass="java.lang.String">
		select SITE_NAME, CREATE_DATE, MERCHANT_NUMBER, UPDATE_DATE, PARENT_SITE_NAME
		<include refid="SELECT_SITE_FRAGMENT"/>
	</select>
	
	<select id="SELECT_ALL_SITES" resultMap="SITE_RESULT">
		select SITE_NAME, CREATE_DATE, MERCHANT_NUMBER, UPDATE_DATE, PARENT_SITE_NAME
		from SITE
	</select>

	<!-- Inserts/Updates -->
	<insert id="INSERT_SITE" parameterClass="com.mpower.domain.model.Site">
		insert into SITE (SITE_NAME, CREATE_DATE, MERCHANT_NUMBER, UPDATE_DATE, PARENT_SITE_NAME)
		values (#name#, #createDate#, #merchantNumber#,	#updateDate#, #parentSite.name#)
	</insert>





	<insert id="site-ibatorgenerated_insertSelective" parameterClass="com.mpower.domain.model.Site">
		insert into SITE
		<dynamic prepend="(">
			<isNotNull prepend="," property="name">
				SITE_NAME
			</isNotNull>
			<isNotNull prepend="," property="createDate">
				CREATE_DATE
			</isNotNull>
			<isNotNull prepend="," property="merchantNumber">
				MERCHANT_NUMBER
			</isNotNull>
			<isNotNull prepend="," property="updateDate">
				UPDATE_DATE
			</isNotNull>
			<isNotNull prepend="," property="parentSite">
				PARENT_SITE_NAME
		   	</isNotNull>
			)
		</dynamic>
		values
		<dynamic prepend="(">
			<isNotNull prepend="," property="name">
				#name:VARCHAR#
			</isNotNull>
			<isNotNull prepend="," property="createDate">
				#createDate:TIMESTAMP#
			</isNotNull>
			<isNotNull prepend="," property="merchantNumber">
				#merchantNumber:VARCHAR#
			</isNotNull>
			<isNotNull prepend="," property="updateDate">
				#updateDate:TIMESTAMP#
			</isNotNull>
			<isNotNull prepend="," property="parentSite">
				#parentSite:VARCHAR#
			</isNotNull>
			)
		</dynamic>
	</insert>
	
	<update id="site-ibatorgenerated_updateByPrimaryKeySelective"
		parameterClass="com.mpower.domain.model.Site">
		update SITE
		<dynamic prepend="set">
			<isNotNull prepend="," property="merchantNumber">
				MERCHANT_NUMBER = #merchantNumber:VARCHAR#
			</isNotNull>
			<isNotNull prepend="," property="updateDate">
				UPDATE_DATE = #updateDate:TIMESTAMP#
			</isNotNull>
			<isNotNull prepend="," property="parentSite">
				PARENT_SITE_NAME = #parentSite:VARCHAR#
			</isNotNull>
		</dynamic>
		where SITE_NAME = #name:VARCHAR#
	</update>
	
	<update id="site-ibatorgenerated_updateByPrimaryKey" parameterClass="com.mpower.domain.model.Site">
		update SITE
		set MERCHANT_NUMBER = #merchantNumber:VARCHAR#,
		UPDATE_DATE = #updateDate:TIMESTAMP#,
		PARENT_SITE_NAME = #parentSite:VARCHAR#
		where SITE_NAME = #name:VARCHAR#
	</update>
	
</sqlMap>