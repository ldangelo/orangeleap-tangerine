    <persistence-unit name="MPowerDevPu" transaction-type="RESOURCE_LOCAL">
        <!-- This is the test file!!!!! -->
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <mapping-file>com/mpower/dao/query/Message.orm.xml</mapping-file>
        <mapping-file>com/mpower/dao/query/PageCustomization.orm.xml</mapping-file>
        <mapping-file>com/mpower/dao/query/Field.orm.xml</mapping-file>
        <mapping-file>com/mpower/dao/query/Site.orm.xml</mapping-file>
        <mapping-file>com/mpower/dao/query/Code.orm.xml</mapping-file>
        <mapping-file>com/mpower/dao/query/Gift.orm.xml</mapping-file>
        <mapping-file>com/mpower/dao/query/Person.orm.xml</mapping-file>
        <mapping-file>com/mpower/dao/query/Commitment.orm.xml</mapping-file>
        <mapping-file>com/mpower/dao/query/PaymentSource.orm.xml</mapping-file>
        <mapping-file>com/mpower/dao/query/RecurringGift.orm.xml</mapping-file>
        <mapping-file>com/mpower/dao/query/Audit.orm.xml</mapping-file>
        <mapping-file>com/mpower/dao/query/QueryLookup.orm.xml</mapping-file>
        <mapping-file>com/mpower/dao/query/Address.orm.xml</mapping-file>
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="false"/>
