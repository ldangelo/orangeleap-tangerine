<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dwr="http://www.directwebremoting.org/schema/spring-dwr"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.directwebremoting.org/schema/spring-dwr
       http://www.directwebremoting.org/schema/spring-dwr-2.0.xsd">

    <!-- the application context definition for the mpower DispatcherServlet -->

    <bean id="messageSource" class="com.mpower.controller.validator.MpowerMessageSource">
        <property name="messageService" ref="messageService"/>
	</bean>

	<bean id="paymentManager" class="com.mpower.controller.PaymentManagerFormController">
    	<property name="commandName" value="paymentSource" />
    	<property name="commandClass" value="com.mpower.domain.PaymentSource" />
		<property name="validators">
			<list>
	            <bean class="com.mpower.controller.validator.PaymentSourceValidator">
			        <property name="pageType" value="paymentSource"/>
			        <property name="siteService" ref="siteService" />
	            </bean>
			</list>
        </property>
    	<property name="personService" ref="personService" />
    	<property name="paymentSourceService" ref="paymentSourceService" />
    </bean>

    <bean id="paymentManagerEdit" class="com.mpower.controller.PaymentManagerEditFormController">
    	<property name="commandName" value="paymentSource" />
    	<property name="commandClass" value="com.mpower.domain.PaymentSource" />
    	<property name="personService" ref="personService" />
    	<property name="paymentSourceService" ref="paymentSourceService" />
    </bean>

    <bean id="paymentSourceDelete" class="com.mpower.controller.PaymentSourceDeleteController">
    	<property name="paymentSourceService" ref="paymentSourceService" />
    </bean>

	<bean id="addressManager" class="com.mpower.controller.AddressFormController">
    	<property name="commandName" value="address" />
    	<property name="commandClass" value="com.mpower.domain.Address" />
<!--		<property name="validators">-->
<!--			<list>-->
<!--	            <bean class="com.mpower.controller.validator.AddressValidator">-->
<!--			        <property name="pageType" value="paymentSource"/>-->
