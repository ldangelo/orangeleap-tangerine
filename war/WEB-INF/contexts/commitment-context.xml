<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="commitmentFormController" class="com.mpower.controller.commitment.CommitmentFormController" parent="tangerineConstituentAttributesFormController" abstract="true">
        <property name="commandName" value="commitment"/>
