<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


    <bean id="personSearch" class="com.orangeleap.tangerine.controller.constituent.PersonSearchFormController">
        <property name="commandName" value="person"/>
        <property name="commandClass" value="com.orangeleap.tangerine.domain.Person"/>
<!--        <property name="validator">-->
<!--            <bean class="spring_mvc_starter_anno.service.ProductValidator"/>-->
<!--        </property>-->
        <property name="formView" value="constituent/personSearch"/>
        <property name="successView" value="constituent/personSearch"/>
    </bean>

    <bean id="person" class="com.orangeleap.tangerine.controller.constituent.PersonFormController" parent="tangerineFormController">
        <property name="commandName" value="person"/>
        <property name="commandClass" value="com.orangeleap.tangerine.domain.Person"/>
        <property name="formView" value="constituent/person" />
        <property name="successView" value="redirect:/person.htm" />
    </bean>

    <bean id="personView" class="com.orangeleap.tangerine.controller.constituent.PersonViewController">
        <property name="viewName" value="constituent/personView"/>
    </bean>

    <bean id="personList" class="com.orangeleap.tangerine.controller.constituent.PersonListController">
        <property name="viewName" value="constituent/personList"/>
    </bean>
    
    <bean id="personUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping" parent="urlMapping">
		<property name="mappings">
		    <props>
		        <prop key="/person.htm">person</prop>
		        <prop key="/personSearch.htm">personSearch</prop>
		        <prop key="/personView.htm">personView</prop>
                <prop key="/personList.htm">personList</prop>
			</props>
		</property>
	</bean>

</beans>