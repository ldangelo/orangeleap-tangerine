<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
       
	<bean id="emailManager" class="com.mpower.controller.email.EmailFormController" parent="tangerineConstituentAttributesFormController">
    	<property name="commandName" value="email" />
    	<property name="commandClass" value="com.mpower.domain.model.communication.Email" />
        <property name="bindAddress" value="false"/>
        <property name="bindPaymentSource" value="false"/>
        <property name="bindPhone" value="false"/>
        <property name="bindEmail" value="false"/>
		<property name="validators">
			<list>
	            <ref bean="emailValidator"/>
	            <bean class="com.mpower.controller.validator.EntityValidator">
			        <property name="pageType" value="emailManager"/>
	            </bean>
			</list>
        </property>
    	<property name="formView" value="email/emailManager"/>
    	<property name="successView" value="redirect:/emailManager.htm"/>
    </bean>

    <bean id="emailManagerEdit" class="com.mpower.controller.email.EmailManagerEditFormController" parent="emailManager">
    	<property name="formView" value="email/emailManagerEdit"/>
    </bean>
    
    <bean id="emailDelete" class="com.mpower.controller.TangerineDeleteController">
    	<property name="service" ref="emailService"/>
    	<property name="idParameterName" value="emailId"/>
    	<property name="viewName" value="redirect:/emailManager.htm"/>
    </bean>

    <bean id="emailUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping" parent="urlMapping">
		<property name="mappings">
		    <props>
                <prop key="/emailManager.htm">emailManager</prop>
                <prop key="/emailManagerEdit.htm">emailManagerEdit</prop>
                <prop key="/emailDelete.htm">emailDelete</prop>
			</props>
		</property>
	</bean>

</beans>