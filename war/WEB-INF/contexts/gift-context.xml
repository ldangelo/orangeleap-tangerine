<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
       
	<bean id="gift" class="com.mpower.controller.gift.GiftFormController">
        <property name="commandName" value="gift"/>
        <property name="commandClass" value="com.mpower.domain.Gift"/>
		<property name="validator">
            <bean class="com.mpower.controller.validator.EntityValidator">
		        <property name="pageType" value="gift"/>
		        <property name="siteService" ref="siteService" />
            </bean>
        </property>
        <property name="formView" value="gift/gift" />
        <property name="successView" value="gift/giftView" />
        <property name="addressService" ref="addressService" />
        <property name="commitmentService" ref="commitmentService" />
        <property name="giftService" ref="giftService" />
        <property name="paymentSourceService" ref="paymentSourceService" />
        <property name="personService" ref="personService" />
        <property name="phoneService" ref="phoneService" />
        <property name="siteService" ref="siteService" />
    </bean>

    <bean id="giftRefund" class="com.mpower.controller.gift.GiftRefundController">
        <property name="giftService" ref="giftService" />
    </bean>


    <bean id="giftSearch" class="com.mpower.controller.gift.GiftSearchFormController">
        <property name="commandName" value="gift"/>
        <property name="commandClass" value="com.mpower.domain.Gift"/>
        <property name="formView" value="gift/giftSearch"/>
        <property name="successView" value="gift/giftSearch"/>
        <property name="giftService" ref="giftService"/>
        <property name="sessionService" ref="sessionService"/>
    </bean>


    <bean id="giftList" class="com.mpower.controller.gift.GiftListController">
        <property name="giftService" ref="giftService"/>
        <property name="personService" ref="personService"/>
        <property name="viewName" value="gift/giftList"/>
    </bean>

    <bean id="giftView" class="com.mpower.controller.gift.GiftViewController">
        <property name="giftService" ref="giftService" />
        <property name="viewName" value="gift/giftView"/>
    </bean>

    <bean id="recurringGift" class="com.mpower.controller.gift.RecurringGiftFormController">
        <property name="commandName" value="commitment"/>
        <property name="commandClass" value="com.mpower.domain.Commitment"/>
        <property name="pageType" value="recurringGift"/>
		<property name="validators">
			<list>
	            <bean class="com.mpower.controller.validator.CommitmentValidator">
			        <property name="pageType" value="recurringGift"/>
			        <property name="siteService" ref="siteService" />
	            </bean>
	            <bean class="com.mpower.controller.validator.EntityValidator">
			        <property name="pageType" value="recurringGift"/>
			        <property name="siteService" ref="siteService" />
	            </bean>
			</list>
        </property>
        <property name="formView" value="gift/recurringGift" />
        <property name="successView" value="gift/recurringGiftView" />
        <property name="addressService" ref="addressService" />
        <property name="commitmentService" ref="commitmentService" />
        <property name="paymentSourceService" ref="paymentSourceService" />
        <property name="personService" ref="personService" />
        <property name="phoneService" ref="phoneService" />
        <property name="siteService" ref="siteService" />
    </bean>

    <bean id="recurringGiftSearch" class="com.mpower.controller.gift.RecurringGiftSearchFormController">
        <property name="commandName" value="commitment"/>
        <property name="commandClass" value="com.mpower.domain.Commitment"/>
        <property name="formView" value="gift/recurringGiftSearch"/>
        <property name="successView" value="gift/recurringGiftSearch"/>
        <property name="commitmentService" ref="commitmentService" />
        <property name="sessionService" ref="sessionService"/>
    </bean>


    <bean id="recurringGiftList" class="com.mpower.controller.gift.RecurringGiftListController">
        <property name="commitmentService" ref="commitmentService" />
        <property name="personService" ref="personService"/>
        <property name="viewName" value="gift/recurringGiftList"/>
    </bean>

    <bean id="recurringGiftView" class="com.mpower.controller.gift.RecurringGiftFormController">
        <property name="commandName" value="commitment"/>
        <property name="commandClass" value="com.mpower.domain.Commitment"/>
		<property name="validator">
            <bean class="com.mpower.controller.validator.EntityValidator">
		        <property name="pageType" value="recurringGiftView"/>
		        <property name="siteService" ref="siteService" />
            </bean>
        </property>
        <property name="formView" value="gift/recurringGiftView" />
        <property name="successView" value="gift/recurringGiftView" />
        <property name="addressService" ref="addressService" />
        <property name="commitmentService" ref="commitmentService" />
        <property name="paymentSourceService" ref="paymentSourceService" />
        <property name="personService" ref="personService" />
        <property name="phoneService" ref="phoneService" />
        <property name="siteService" ref="siteService" />
    </bean>
    
    <bean id="giftUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping" parent="urlMapping">
		<property name="mappings">
		    <props>
		        <prop key="/gift.htm">gift</prop>
		        <prop key="/giftList.htm">giftList</prop>
		        <prop key="/giftRefund.htm">giftRefund</prop>
		        <prop key="/giftSearch.htm">giftSearch</prop>
		    	<prop key="/giftView.htm">giftView</prop>
		        <prop key="/recurringGift.htm">recurringGift</prop>
		        <prop key="/recurringGiftList.htm">recurringGiftList</prop>
		        <prop key="/recurringGiftSearch.htm">recurringGiftSearch</prop>
		    	<prop key="/recurringGiftView.htm">recurringGiftView</prop>
			</props>
		</property>
	</bean>
       
</beans>