<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="newAbstractGiftController" class="com.orangeleap.tangerine.controller.gift.AbstractGiftController" parent="abstractDistributionLineFormController" abstract="true">
		<property name="bindAddress" value="true"/>
		<property name="bindPhone" value="true"/>
        <property name="bindPaymentSource" value="true"/>
        <property name="giftUrl" value="redirect:/gift.htm" />
        <property name="giftViewUrl" value="redirect:/giftView.htm" />
    </bean>

	<bean id="newGiftFormController" class="com.orangeleap.tangerine.controller.gift.GiftFormController" parent="newAbstractGiftController">
        <property name="formView" value="gift/gift" />
        <property name="successView" value="redirect:/gift.htm" />
    </bean>

	<bean id="newGiftViewController" class="com.orangeleap.tangerine.controller.gift.GiftViewController" parent="newAbstractGiftController">
	    <property name="formView" value="gift/giftView"/>
	    <property name="successView" value="redirect:/giftView.htm"/>
	</bean>

	<bean id="giftSearchController" class="com.orangeleap.tangerine.controller.gift.GiftSearchFormController">
	    <property name="commandName" value="gift"/>
	    <property name="commandClass" value="com.orangeleap.tangerine.domain.paymentInfo.Gift"/>
	    <property name="formView" value="gift/giftSearch"/>
	    <property name="successView" value="gift/giftSearch"/>
	</bean>

	<bean id="giftListController" class="com.orangeleap.tangerine.controller.DummyController">
	    <property name="viewName" value="gift/giftList"/>
	</bean>

	<bean id="giftPledgeRecurringGiftLinesController" class="com.orangeleap.tangerine.controller.gift.GiftPledgeRecurringGiftLinesController"
			 parent="abstractDistributionLineFormController">
	    <property name="formView" value="gift/giftCombinedDistributionLines"/>
	    <property name="successView" value="gift/giftCombinedDistributionLines"/>
	</bean>

	<bean id="adjustedGiftController" class="com.orangeleap.tangerine.controller.gift.adjustment.GiftAdjustmentController"
	      parent="newTangerineConstituentAttributesFormController">
		<property name="bindAddress" value="true"/>
		<property name="bindPhone" value="true"/>
        <property name="bindPaymentSource" value="true"/>
	    <property name="formView" value="adjustedGift/giftAdjustment"/>
	    <property name="successView" value="redirect:/giftAdjustmentView.htm"/>
	</bean>

	<bean id="adjustedGiftViewController" class="com.orangeleap.tangerine.controller.gift.adjustment.GiftAdjustmentViewController"
			parent="newTangerineConstituentAttributesFormController">
		<property name="bindAddress" value="true"/>
		<property name="bindPhone" value="true"/>
        <property name="bindPaymentSource" value="true"/>
	    <property name="formView" value="adjustedGift/giftAdjustmentView"/>
	    <property name="successView" value="redirect:/giftAdjustmentView.htm"/>
	</bean>

    <bean id="giftUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping" parent="urlMapping">
		<property name="mappings">
		    <props>
			    <prop key="/gift.htm">newGiftFormController</prop>
			    <prop key="/giftView.htm">newGiftViewController</prop>
			    <prop key="/giftAdjustment.htm">adjustedGiftController</prop>
			    <prop key="/giftAdjustmentView.htm">adjustedGiftViewController</prop>
			    <prop key="/giftCombinedDistributionLines.htm">giftPledgeRecurringGiftLinesController</prop>
			    <prop key="/giftSearch.htm">giftSearchController</prop>
			    <prop key="/giftList.htm">giftListController</prop>
			</props>
		</property>
	</bean>
       
</beans>