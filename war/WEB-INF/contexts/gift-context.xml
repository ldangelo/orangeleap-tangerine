<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
    <!-- Gift -->
	<bean id="giftFormController" class="com.orangeleap.tangerine.controller.gift.GiftFormController" parent="tangerineConstituentAttributesFormController">
        <property name="commandName" value="gift"/>
        <property name="commandClass" value="com.orangeleap.tangerine.domain.paymentInfo.Gift"/>
        <property name="formView" value="gift/gift" />
        <property name="successView" value="redirect:/giftView.htm" />
		<property name="validators">
			<list>
	            <bean class="com.orangeleap.tangerine.controller.validator.EntityValidator">
			        <property name="pageType" value="gift"/>
	            </bean>
	            <ref bean="codeValidator"/>	            
	            <ref bean="distributionLinesValidator"/>	            
	        </list>
        </property>
    </bean>

    <bean id="giftViewController" class="com.orangeleap.tangerine.controller.gift.GiftViewController" parent="tangerineConstituentAttributesFormController">
        <property name="commandName" value="gift"/>
        <property name="commandClass" value="com.orangeleap.tangerine.domain.paymentInfo.Gift"/>
        <property name="formView" value="gift/giftView"/>
        <property name="successView" value="redirect:/giftView.htm"/>
        <!-- <property name="redirectView" value="redirect:/giftList.htm"/> -->
		<property name="validators">
			<list>
	            <bean class="com.orangeleap.tangerine.controller.validator.EntityValidator">
			        <property name="pageType" value="gift"/>
	            </bean>
	            <ref bean="codeValidator"/>	            
	        </list>
        </property>
    </bean>

    <bean id="giftAdjustmentController" class="com.orangeleap.tangerine.controller.gift.GiftAdjustmentController" parent="giftFormController">
        <property name="commandName" value="adjustedGift"/>
        <property name="commandClass" value="com.orangeleap.tangerine.domain.paymentInfo.AdjustedGift"/>
        <property name="formView" value="gift/giftAdjustment"/>
        <property name="successView" value="redirect:/giftAdjustmentView.htm"/>
		<property name="validators">
			<list>
	            <bean class="com.orangeleap.tangerine.controller.validator.AdjustedGiftEntityValidator">
			        <property name="pageType" value="adjustedGift"/>
	            </bean>
	            <ref bean="codeValidator"/>
                <ref bean="adjustedDistributionLinesValidator"/>
	        </list>
        </property>
    </bean>
    
    <bean id="giftAdjustmentViewController" class="com.orangeleap.tangerine.controller.gift.GiftAdjustmentViewController">
    	<property name="viewName" value="gift/giftAdjustmentView"/>
    </bean>

    <bean id="giftSearchController" class="com.orangeleap.tangerine.controller.gift.GiftSearchFormController">
        <property name="commandName" value="gift"/>
        <property name="commandClass" value="com.orangeleap.tangerine.domain.paymentInfo.Gift"/>
        <property name="formView" value="gift/giftSearch"/>
        <property name="successView" value="gift/giftSearch"/>
    </bean>

    <bean id="giftListController" class="com.orangeleap.tangerine.controller.gift.GiftListController">
        <property name="viewName" value="gift/giftList"/>
    </bean>

    <bean id="giftPledgeRecurringGiftLinesController" class="com.orangeleap.tangerine.controller.gift.GiftPledgeRecurringGiftLinesController">
        <property name="commandName" value="giftPledgeLines"/>
        <property name="commandClass" value="com.orangeleap.tangerine.controller.gift.GiftPledgeRecurringGiftLinesForm"/>
        <property name="formView" value="gift/giftCombinedDistributionLines"/>
        <property name="successView" value="gift/giftCombinedDistributionLines"/>
    </bean>
    
    <bean id="giftUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping" parent="urlMapping">
		<property name="mappings">
		    <props>
		        <prop key="/gift.htm">giftFormController</prop>
		    	<prop key="/giftView.htm">giftViewController</prop>
		        <prop key="/giftSearch.htm">giftSearchController</prop>
		        <prop key="/giftList.htm">giftListController</prop>
		        <prop key="/giftPledgeRecurringGiftLines.htm">giftPledgeRecurringGiftLinesController</prop>
                <prop key="/giftAdjustment.htm">giftAdjustmentController</prop>
                <prop key="/giftAdjustmentView.htm">giftAdjustmentViewController</prop>
			</props>
		</property>
	</bean>
       
</beans>