<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
    <!-- Gift -->
	<bean id="giftFormController" class="com.mpower.controller.gift.GiftFormController" parent="tangerineConstituentAttributesFormController">
        <property name="commandName" value="gift"/>
        <property name="commandClass" value="com.mpower.domain.model.paymentInfo.Gift"/>
		<property name="validators">
			<list>
	            <bean class="com.mpower.controller.validator.EntityValidator">
			        <property name="pageType" value="gift"/>
	            </bean>
	            <ref bean="codeValidator"/>	            
	            <ref bean="distributionLinesValidator"/>	            
	        </list>
        </property>
        <property name="formView" value="gift/gift" />
        <property name="successView" value="redirect:/giftView.htm" />
    </bean>

    <bean id="giftViewController" class="com.mpower.controller.gift.GiftViewController" parent="giftFormController">
        <property name="formView" value="gift/giftView"/>
        <property name="successView" value="redirect:/giftView.htm"/>
    </bean>

    <bean id="giftRefundController" class="com.mpower.controller.gift.GiftRefundController">
        <property name="viewName" value="redirect:/giftView.htm" />
    </bean>

    <bean id="giftSearchController" class="com.mpower.controller.gift.GiftSearchFormController">
        <property name="commandName" value="gift"/>
        <property name="commandClass" value="com.mpower.domain.model.paymentInfo.Gift"/>
        <property name="formView" value="gift/giftSearch"/>
        <property name="successView" value="gift/giftSearch"/>
    </bean>

    <bean id="giftListController" class="com.mpower.controller.gift.GiftListController">
        <property name="viewName" value="gift/giftList"/>
    </bean>
    
    <bean id="giftUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping" parent="urlMapping">
		<property name="mappings">
		    <props>
		        <prop key="/gift.htm">giftFormController</prop>
		    	<prop key="/giftView.htm">giftViewController</prop>
		        <prop key="/giftRefund.htm">giftRefundController</prop>
		        <prop key="/giftSearch.htm">giftSearchController</prop>
		        <prop key="/giftList.htm">giftListController</prop>
			</props>
		</property>
	</bean>
       
</beans>