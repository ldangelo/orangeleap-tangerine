<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
       
	<bean id="multiPicklistController" class="com.mpower.controller.lookup.MultiPicklistController">
		<property name="viewName" value="lookup/multiPicklist"/>
	</bean>  
       
	<!-- Query Lookup -->
    <bean id="queryLookupController" class="com.mpower.controller.lookup.QueryLookupController">
        <property name="queryLookupService" ref="queryLookupService"/>
        <property name="viewName" value="lookup/queryLookup"/>
    </bean>

	<!-- Multi-Query Lookup -->
    <bean id="multiQueryLookupController" class="com.mpower.controller.lookup.MultiQueryLookupController" parent="queryLookupController">
        <property name="viewName" value="lookup/multiQueryLookup"/>
    </bean>
    
    <bean id="queryLookupUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping" parent="urlMapping">
		<property name="mappings">
		    <props>
                <prop key="/multiPicklist.htm">multiPicklistController</prop>
                <prop key="/queryLookup.htm">queryLookupController</prop>
                <prop key="/multiQueryLookup.htm">multiQueryLookupController</prop>
			</props>
		</property>
	</bean>
 
 </beans>
       