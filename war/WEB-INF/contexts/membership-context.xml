<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="membership" class="com.orangeleap.tangerine.controller.membership.MembershipFormController">
        <property name="commandName" value="commitment"/>
        <property name="commandClass" value="com.orangeleap.tangerine.domain.paymentInfo.Commitment"/>
        <property name="pageType" value="membership"/>
		<property name="validators">
			<list>
	            <ref bean="commitmentValidator"/>
	            <bean class="com.orangeleap.tangerine.controller.validator.EntityValidator">
			        <property name="pageType" value="membership"/>
	            </bean>
			</list>
        </property>
        <property name="formView" value="membership/membership" />
        <property name="successView" value="membership/membershipView" />
    </bean>

    <bean id="membershipSearch" class="com.orangeleap.tangerine.controller.membership.MembershipSearchFormController">
        <property name="commandName" value="commitment"/>
        <property name="commandClass" value="com.orangeleap.tangerine.domain.paymentInfo.Commitment"/>
        <property name="formView" value="membership/membershipSearch"/>
        <property name="successView" value="membership/membershipSearch"/>
    </bean>

    <bean id="membershipList" class="com.orangeleap.tangerine.controller.membership.MembershipListController">
        <property name="viewName" value="membership/membershipList"/>
    </bean>

    <bean id="membershipView" class="com.orangeleap.tangerine.controller.membership.MembershipFormController">
        <property name="commandName" value="commitment"/>
        <property name="commandClass" value="com.orangeleap.tangerine.domain.paymentInfo.Commitment"/>
		<property name="validator">
            <bean class="com.orangeleap.tangerine.controller.validator.EntityValidator">
		        <property name="pageType" value="membershipView"/>
            </bean>
        </property>
        <property name="formView" value="membership/membershipView" />
        <property name="successView" value="membership/membershipView" />
    </bean>
    
    <bean id="membershipUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping" parent="urlMapping">
		<property name="mappings">
		    <props>
		        <prop key="/membership.htm">membership</prop>
		        <prop key="/membershipList.htm">membershipList</prop>
		        <prop key="/membershipSearch.htm">membershipSearch</prop>
		    	<prop key="/membershipView.htm">membershipView</prop>
			</props>
		</property>
	</bean>
	
</beans>