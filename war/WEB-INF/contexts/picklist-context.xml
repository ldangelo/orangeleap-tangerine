<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
       
    <bean id="picklistItemHelper" class="com.mpower.controller.picklist.PicklistItemHelperController">
        <property name="picklistItemService" ref="picklistItemService"/>
        <property name="viewName" value="picklist/picklistItemHelper"/>
    </bean>

    <bean id="picklistItems" class="com.mpower.controller.picklist.PicklistItemManageController">
        <property name="picklistItemService" ref="picklistItemService"/>
        <property name="viewName" value="picklist/picklistItems"/>
    </bean>

	<bean id="picklistItem" class="com.mpower.controller.picklist.PicklistItemFormController">
        <property name="commandName" value="picklistItem"/>
        <property name="commandClass" value="com.mpower.domain.customization.PicklistItem"/>
        <property name="formView" value="picklist/picklistItem" />
        <property name="successView" value="picklist/picklistItem" />
        <property name="picklistItemService" ref="picklistItemService"/>
    </bean>

    <bean id="codeUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping" parent="urlMapping">
		<property name="mappings">
		    <props>
                <prop key="/picklistItemHelper.htm">picklistItemHelper</prop>
                <prop key="/picklistItem.htm">picklistItem</prop>
                <prop key="/picklistItems.htm">picklistItems</prop>
			</props>
		</property>
	</bean>

</beans>