<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="managePicklistsController" class="com.orangeleap.tangerine.controller.picklist.ManagePicklistsController">
        <property name="viewName" value="picklist/managePicklist"/>
    </bean>


    <!-- the following are deprecated and will be removed -->
    <bean id="picklistItemHelper" class="com.orangeleap.tangerine.controller.picklist.PicklistItemHelperController">
        <property name="viewName" value="picklist/picklistItemHelper"/>
    </bean>

    <bean id="picklistItems" class="com.orangeleap.tangerine.controller.picklist.PicklistItemManageController">
        <property name="viewName" value="picklist/picklistItems"/>
    </bean>

	<bean id="picklistItem" class="com.orangeleap.tangerine.controller.picklist.PicklistItemFormController">
        <property name="commandName" value="picklistItem"/>
        <property name="commandClass" value="com.orangeleap.tangerine.domain.customization.PicklistItem"/>
        <property name="formView" value="picklist/picklistItem" />
        <property name="successView" value="picklist/picklistItem" />
    </bean>

	<bean id="picklistItemCustomize" class="com.orangeleap.tangerine.controller.picklist.PicklistItemCustomizeFormController">
        <property name="formView" value="picklist/picklistItemCustomize" />
        <property name="successView" value="picklist/picklistItemCustomize" />
    </bean>

	<bean id="picklistCustomize" class="com.orangeleap.tangerine.controller.picklist.PicklistCustomizeFormController">
        <property name="formView" value="picklist/picklistCustomize" />
        <property name="successView" value="picklist/picklistCustomize" />
    </bean>

    <bean id="picklistItemUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping" parent="urlMapping">
		<property name="mappings">
		    <props>
                <prop key="/picklistItems.htm">managePicklistsController</prop>

                <!-- the following are deprecated and will be removed -->
                <prop key="/picklistItemHelper.htm">picklistItemHelper</prop>
                <prop key="/picklistItem.htm">picklistItem</prop>
                <prop key="/picklistCustomize.htm">picklistCustomize</prop>
                <prop key="/picklistItemCustomize.htm">picklistItemCustomize</prop>
			</props>
		</property>
	</bean>

</beans>