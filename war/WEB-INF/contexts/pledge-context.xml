<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
    
    <bean id="pledgeFormController" class="com.orangeleap.tangerine.controller.commitment.CommitmentFormController" parent="commitmentFormController">
        <property name="pageType" value="pledge"/>
        <property name="commitmentType" value="PLEDGE"/>
        <property name="bindAddress" value="false"/>
        <property name="bindPaymentSource" value="false"/>
        <property name="bindPhone" value="false"/>
        <property name="validators">
			<list>
	            <ref bean="commitmentValidator"/>
	            <bean class="com.orangeleap.tangerine.controller.validator.EntityValidator">
			        <property name="pageType" value="pledge"/>
	            </bean>
	            <ref bean="codeValidator"/>	            
	            <ref bean="distributionLinesValidator"/>	            
			</list>
        </property>
        <property name="formView" value="pledge/pledge" />
        <property name="successView" value="redirect:/pledgeView.htm" />
        <property name="formUrl" value="redirect:/pledge.htm" />
    </bean>

    <bean id="pledgeViewController" class="com.orangeleap.tangerine.controller.commitment.CommitmentViewController" parent="pledgeFormController">
        <property name="formView" value="pledge/pledgeView" />
        <property name="successView" value="redirect:/pledgeView.htm" />
        <property name="validators">
			<list>
	            <ref bean="commitmentValidator"/>
	            <bean class="com.orangeleap.tangerine.controller.validator.EntityValidator">
			        <property name="pageType" value="pledge"/>
	            </bean>
	            <ref bean="codeValidator"/>	            
			</list>
        </property>
    </bean>

    <bean id="pledgeSearchController" class="com.orangeleap.tangerine.controller.commitment.pledge.PledgeSearchFormController">
        <property name="commandName" value="commitment"/>
        <property name="commandClass" value="com.orangeleap.tangerine.domain.paymentInfo.Commitment"/>
        <property name="formView" value="pledge/pledgeSearch"/>
        <property name="successView" value="pledge/pledgeSearch"/>
    </bean>

    <bean id="pledgeListController" class="com.orangeleap.tangerine.controller.commitment.CommitmentListController">
        <property name="viewName" value="pledge/pledgeList"/>
        <property name="commitmentType" value="PLEDGE"/>
    </bean>

    <bean id="pledgeUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping" parent="urlMapping">
		<property name="mappings">
		    <props>
		        <prop key="/pledge.htm">pledgeFormController</prop>
		    	<prop key="/pledgeView.htm">pledgeViewController</prop>
		        <prop key="/pledgeSearch.htm">pledgeSearchController</prop>
		        <prop key="/pledgeList.htm">pledgeListController</prop>
			</props>
		</property>
	</bean>

</beans>