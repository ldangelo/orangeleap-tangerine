<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


    <bean id="siteSettings" class="com.orangeleap.tangerine.controller.siteSettings.SiteSettingsController" >
        <property name="commandName" value="site"/>
        <property name="commandClass" value="com.orangeleap.tangerine.domain.Site"/>

        <property name="formView" value="siteSettings/siteSettings" />
        <property name="successView" value="redirect:/siteSettings.htm" />
    </bean>

    <bean id="siteOptions" class="com.orangeleap.tangerine.controller.siteSettings.SiteOptionsController" >
        <property name="formView" value="siteSettings/siteOptions" />
        <property name="successView" value="redirect:/siteOptions.htm" />
    </bean>

    <bean id="siteDefaults" class="com.orangeleap.tangerine.controller.siteSettings.SiteDefaultsController" >
        <property name="formView" value="siteSettings/siteDefaults" />
        <property name="successView" value="redirect:/siteDefaults.htm" />
    </bean>

    <bean id="siteSettingsUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping" parent="urlMapping">
		<property name="mappings">
		    <props>
		        <prop key="siteSettings.htm">siteSettings</prop>
		        <prop key="siteOptions.htm">siteOptions</prop>
		        <prop key="siteDefaults.htm">siteDefaults</prop>
			</props>
		</property>
	</bean>

</beans>