<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="addressValidator" class="com.mpower.controller.validator.AddressValidator" />

	<bean id="phoneValidator" class="com.mpower.controller.validator.PhoneValidator" />

	<bean id="emailValidator" class="com.mpower.controller.validator.EmailValidator" />

	<bean id="commitmentValidator" class="com.mpower.controller.validator.CommitmentValidator" />

	<bean id="distributionLinesValidator" class="com.mpower.controller.validator.DistributionLinesValidator" />

	<bean id="codeValidator" class="com.mpower.controller.validator.CodeValidator">
        <property name="codeService" ref="codeService" />
        <property name="sessionService" ref="sessionService" />
	</bean>

	<bean id="paymentSourceValidator" class="com.mpower.controller.validator.PaymentSourceValidator">
        <property name="paymentSourceService" ref="paymentSourceService" />
	</bean>

</beans>