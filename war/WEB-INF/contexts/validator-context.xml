<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
       

	<bean id="constituentValidator" class="com.orangeleap.tangerine.controller.validator.ConstituentValidator" />

	<bean id="addressValidator" class="com.orangeleap.tangerine.controller.validator.AddressValidator" />

	<bean id="phoneValidator" class="com.orangeleap.tangerine.controller.validator.PhoneValidator" />

	<bean id="emailValidator" class="com.orangeleap.tangerine.controller.validator.EmailValidator" />

	<bean id="recurringGiftValidator" class="com.orangeleap.tangerine.controller.validator.RecurringGiftValidator" />

	<bean id="pledgeValidator" class="com.orangeleap.tangerine.controller.validator.PledgeValidator" />
	
	<bean id="distributionLinesValidator" class="com.orangeleap.tangerine.controller.validator.DistributionLinesValidator" />

	<bean id="adjustedDistributionLinesValidator" class="com.orangeleap.tangerine.controller.validator.AdjustedDistributionLinesValidator" />

	<bean id="giftInKindDetailsValidator" class="com.orangeleap.tangerine.controller.validator.GiftInKindDetailsValidator" />

	<bean id="codeValidator" class="com.orangeleap.tangerine.controller.validator.CodeValidator">
        <property name="picklistItemService" ref="picklistItemService" />
        <property name="tangerineUserHelper" ref="tangerineUserHelper" />
	</bean>

	<bean id="paymentSourceValidator" class="com.orangeleap.tangerine.controller.validator.PaymentSourceValidator">
        <property name="paymentSourceService" ref="paymentSourceService" />
	</bean>

    <bean id="constituentEntityValidator" class="com.orangeleap.tangerine.controller.validator.EntityValidator">
         <property name="pageType" value="constituent"/>
	</bean>
	
    <bean id="giftEntityValidator" class="com.orangeleap.tangerine.controller.validator.EntityValidator">
         <property name="pageType" value="gift"/>
	</bean>

    <bean id="giftInKindEntityValidator" class="com.orangeleap.tangerine.controller.validator.EntityValidator">
         <property name="pageType" value="giftInKind"/>
	</bean>

    <bean id="pledgeEntityValidator" class="com.orangeleap.tangerine.controller.validator.EntityValidator">
         <property name="pageType" value="pledge"/>
	</bean>

    <bean id="recurringGiftEntityValidator" class="com.orangeleap.tangerine.controller.validator.EntityValidator">
         <property name="pageType" value="recurringGift"/>
	</bean>

    <bean id="communicationHistoryEntityValidator" class="com.orangeleap.tangerine.controller.validator.EntityValidator">
         <property name="pageType" value="communicationHistory"/>
	</bean>

	<bean id="adjustedGiftEntityValidator" class="com.orangeleap.tangerine.controller.validator.AdjustedGiftEntityValidator">
	     <property name="pageType" value="adjustedGift"/>
	</bean>

	<bean id="paymentManagerEntityValidator" class="com.orangeleap.tangerine.controller.validator.EntityValidator">
		<property name="pageType" value="paymentManager"/>
	</bean>
	
    <bean id="addressManagerEntityValidator" class="com.orangeleap.tangerine.controller.validator.EntityValidator">
        <property name="pageType" value="addressManager"/>
    </bean>

    <bean id="phoneManagerEntityValidator" class="com.orangeleap.tangerine.controller.validator.EntityValidator">
        <property name="pageType" value="phoneManager"/>
    </bean>

    <bean id="emailManagerEntityValidator" class="com.orangeleap.tangerine.controller.validator.EntityValidator">
        <property name="pageType" value="emailManager"/>
    </bean>

</beans>