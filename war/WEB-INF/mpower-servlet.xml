<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <!-- the application context definition for the mpower DispatcherServlet -->

    <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basename" value="messages"/>
    </bean>

    <bean name="/personSearch.htm" class="com.mpower.controller.PersonSearchFormController">
        <property name="commandName" value="person"/>
        <property name="commandClass" value="com.mpower.domain.entity.Person"/>
<!--        <property name="validator">-->
<!--            <bean class="spring_mvc_starter_anno.service.ProductValidator"/>-->
<!--        </property>-->
        <property name="formView" value="personSearch"/>
        <property name="successView" value="personSearch"/>
        <property name="personService" ref="personService"/>
    </bean>


    <bean name="/person.htm" class="com.mpower.controller.PersonFormController">
        <property name="commandName" value="person"/>
        <property name="commandClass" value="com.mpower.domain.entity.Person"/>
        <property name="validator">
            <bean class="com.mpower.controller.validator.PersonValidator">
            	<property name="pageName" value="person" />
<!--            	<property name="pageCustomizationService" ref="personService"/>-->
            </bean>
        </property>
        <property name="formView" value="person" />
        <property name="successView" value="person" />
        <property name="personService" ref="personService" />
    </bean>

	<!-- Configures the Tiles layout system -->
	<bean id="tilesConfigurer"
		class="org.springframework.web.servlet.view.tiles2.TilesConfigurer">
		<property name="definitions">
			<list>
				<value>/WEB-INF/mpower-tiles.xml</value>
			</list>
		</property>
	</bean>

    <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"></property>
        <property name="prefix" value="/WEB-INF/jsp/"></property>
       <property name="suffix" value=".jsp"></property>
    </bean>

</beans>